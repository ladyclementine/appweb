<div class="container">
<p id="notice"><%= notice %></p>
<blockquote>
  <h2 style="text-align:center;font-size:30px;font-color:#424242">Internships</h2>
</blockquote>
<table class="responsive-table">
  <thead>
    <tr>
      <th>Office</th>
      <th>Company</th>
      <th>Cash</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Graduation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internships.each do |internship| %>
      <tr>
        <td><%= internship.office %></td>
        <td><%= internship.company %></td>
        <td><%= internship.cash %></td>
        <td><%= internship.duration %></td>
        <td><%= internship.description %></td>
        <td><%= internship.graduation.name%></td>
        <td><%= link_to 'Show', internship %></td>
        <td><%= link_to 'Edit', edit_internship_path(internship) %></td>
        <td><%= link_to 'Apagar', internship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Internship', new_internship_path, class: "waves-effect waves-light btn" %>
</div>